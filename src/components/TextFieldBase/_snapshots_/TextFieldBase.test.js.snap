import React from 'react';
import { shallow } from 'enzyme';
import { shallowToJson } from 'enzyme-to-json';
import TextFieldBase from '../TextFieldBase';

describe('TextFieldBase - empty', () => {
  it('Должно правильно отрендерить просто TextFieldBase', () => {
    const output = shallow(
      <TextFieldBase className={'class-c0'} />
    );
    expect(shallowToJson(output)).toMatchSnapshot();
  });
})

describe('TextFieldBase with property', () => {
  it('Должно правильно отрендерить TextFieldBase c переданными свойствами', () => {
    const output = shallow(
      <TextFieldBase px={4} py={5} placeholder={'error'} className={'class-b1'}/>
    );
    expect(shallowToJson(output)).toMatchSnapshot();
  });
})