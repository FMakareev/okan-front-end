import React from 'react';
import { shallow } from 'enzyme';
import { shallowToJson } from 'enzyme-to-json';
import Checkbox from '../Checkbox';

describe('Checkbox without label and placeholder', () => {
  it('Должно правильно отрендерить Checkbox без лейбла и плейсхолдера', () => {
    const output = shallow(
      <Checkbox className={'class-c1'} />
    );
    expect(shallowToJson(output)).toMatchSnapshot();
  });
})

describe('Checkbox with label and placeholder', () => {
  it('Должно правильно отрендерить Checkbox с лейблом и плейсхолдером', () => {
    const output = shallow(
      <Checkbox className={'class-c2'} label={'Second'} placeholder={'Second'}/>
    );
    expect(shallowToJson(output)).toMatchSnapshot();
  });
})
