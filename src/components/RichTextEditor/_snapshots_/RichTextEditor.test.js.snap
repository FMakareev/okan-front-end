import React from 'react';
import { shallow } from 'enzyme';
import { shallowToJson } from 'enzyme-to-json';
import RichTextEditor from '../RichTextEditor';

describe('RichTextEditor without meta', () => {
  it('Должно правильно отрендерить RichTextEditor без лейбла и плейсхолдера', () => {
    const output = shallow(
      <RichTextEditor className={'class-c1'} />
    );
    expect(shallowToJson(output)).toMatchSnapshot();
  });
})

describe('RichTextEditor with meta', () => {
  it('Должно правильно отрендерить RichTextEditor с лейблом и плейсхолдером', () => {
    const output = shallow(
      <RichTextEditor className={'class-c2'} meta={'error'}/>
    );
    expect(shallowToJson(output)).toMatchSnapshot();
  });
})